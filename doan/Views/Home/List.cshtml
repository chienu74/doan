@model List<doan.Models.View_Post_Menu>
@using doan.Utilities;
@* @{
    List<BlogComment> blogComment = ViewBag.blcomment;
}  *@
<style>
    .thugond {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    .thugont {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
<!-- Page Header Start -->
<div class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2>Food Blog</h2>
            </div>
            <div class="col-12">
                <a href="">Home</a>
                <a href="">Blog</a>
            </div>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!-- Blog Start -->
<div class="blog">
    <div class="container">
        <div class="section-header text-center">
            <p>Food Blog</p>
            <h2>Latest From Food Blog</h2>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                @* var commentCount = blogComment.Where(m => m.BlogId == item.BlogId); *@
                string url = Functions.TitleSlugGeneration("blog", item.Title, item.BlogId);
                <div class="col-md-6">
                    <div class="blog-item">
                        <div class="blog-img">
                            <img style="width:100%;height:400px" src="@item.Image" alt="Blog">
                        </div>
                        <div class="blog-content">
                            <h2 class="blog-title thugont">@item.Title</h2>
                            <div class="blog-meta">
                                <p><i class="far fa-user"></i>Admin</p>
                                <p><i class="far fa-list-alt"></i>Food</p>
                                <p><i class="far fa-calendar-alt"></i>@item.CreatedDate.Value.ToString("dd/MM/yyyy")</p>
                                <p><i class="far fa-comments"></i>@* @commentCount.Count() *@</p>
                            </div>
                            <div class="blog-text">
                                <p class="thugond">
                                    @item.Description
                                </p>
                                <a class="btn custom-btn" href="/@url">Read More</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>


        <div class="row">
            <div class="col-12">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item"><a href="#" class="page-link">1</a></li>
                    <li class="page-item"><a href="#" class="page-link">2</a></li>
                    <li class="page-item"><a href="#" class="page-link">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Blog End -->
