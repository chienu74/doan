@{
    ViewBag.Active = "Home";
    List<Slide> slide = ViewBag.Slide;
}


<!-- Carousel Start -->
<div class="carousel">
    <div class="container-fluid">
        <div class="owl-carousel">
            @foreach( var item in slide)
            {
            <div class="carousel-item">
                <div class="carousel-img">
                    <img src="@item.SlideImage" alt="Image">
                </div>
                <div class="carousel-text">
                    <h1>Thành phần <span>chất lượng</span> tốt nhất</h1>
                    <p>

                    </p>
                    <div class="carousel-btn">
                        <a class="btn custom-btn" href="/Product">Xem thực đơn</a>
                        <a class="btn custom-btn" href="/Booking">Đặt hàng </a>
                    </div>
                </div>
            </div>  
            }
        </div>
    </div>
</div>
<!-- Carousel End -->
