
@using doan.Models;
@using doan.Utilities;
@model IList<Blog>

<div class="blog">
    <div class="container">
        <div class="section-header text-center">
            <p>Food Blog</p>
            <h2>Latest From Food Blog</h2>
        </div>
        <div class="row">
            @foreach(var item in Model)
            {
                string url = Functions.TitleSlugGeneration("blog", item.Alias, item.BlogId);
                <div class="col-md-6">
                    <div class="blog-item">
                        <div class="blog-img">
                            <img src="@item.Image" alt="Blog">
                        </div>
                        <div class="blog-content">
                            <h2 class="blog-title">@item.Title</h2>
                            <div class="blog-meta">
                                <p><i class="far fa-user"></i>@item.CreatedBy</p>
                                <p><i class="far fa-list-alt"></i>Food</p>
                                <p><i class="far fa-calendar-alt"></i>@item.CreatedDate.Value.ToString("dd-MM-yyyy")</p>
                                <p><i class="far fa-comments"></i>10</p>
                            </div>
                            <div class="blog-text">
                                <p>
                                    @item.Description
                                </p>
                                <a class="btn custom-btn" href="/@url">Read More</a>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>