@model IList<Menu>
<div class="navbar navbar-expand-lg bg-light navbar-light">
    <div class="container-fluid">
        <a href="index.html" class="navbar-brand">Burger <span>King</span></a>
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
            <div class="navbar-nav ml-auto">
                @foreach (var menu in Model.Where(m=>m.Levels==1))
                {
                    var Pid = menu.MenuId;
                    var Smenu = Model.Where(p => p.ParentId == Pid).ToList();

                    @if (Smenu.Count == 0)
                    {
                        <a href="index.html" class="nav-item nav-link ">@menu.Title</a>
                    }
                    else
                    {
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">@menu.Title</a>
                            <div class="dropdown-menu">
                                @foreach(var smn in Smenu){
                                    <a href="blog.html" class="dropdown-item">@smn.Title</a>
                                }
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
