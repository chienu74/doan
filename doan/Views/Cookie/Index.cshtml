@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using doan.Models;
@model IList<Product>;
<div class="page-header">
</div>
<div class="contact mt-6 row">
    @foreach (var item in Model)
    {
        <div class="col-3" style="border: solid 2px black;">
            <h3>@item.Title</h3>
            <img src="@item.Image" />
        </div>
    }

    <h1>Welcome to the Home Page!</h1>

    <p>
        <a asp-controller="Cookie" asp-action="SetCookie">Set Cookie</a>
        <a asp-controller="Cookie" asp-action="ReadCookie">Read Cookie</a>
    </p>
</div>