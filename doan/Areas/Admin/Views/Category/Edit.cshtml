@model doan.Models.Category
@using doan.Utilities;

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="app-wrapper">
    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">
            <form class="forms-sample" asp-action="Edit">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group d-none">
                    <input asp-for="CategoryId" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Alias" class="control-label"></label>
                    <input asp-for="Alias" class="form-control" />
                    <span asp-validation-for="Alias" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                
                <div class="form-group d-none">
                    <input asp-for="CreatedBy" class="form-control" />
                </div>
                <div class="form-group d-none">
                    <input asp-for="CreatedDate" class="form-control" />
                </div>
                <div class="form-group d-none">
                    <input asp-for="ModifiedBy" class="form-control" value="Admin" />
                </div>
                <div class="form-group d-none">
                    <input asp-for="ModifiedDate" class="form-control" value="@Functions.getCurrentDate()" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
            <div>
                <a asp-action="Index"> <i class="fa-solid fa-arrow-left"></i> Quay lại</a>
            </div>
        </div>
    </div>
</div>
