@model doan.Models.Product
@using doan.Utilities;

@{
    ViewData["Controller"] = "Product";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="app-wrapper">
    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">
            <form class="forms-sample" asp-action="Edit">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group d-none">
                    <input asp-for="ProductId" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label">Tên sản phẩm</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Alias" class="control-label">Bí danh</label>
                    <input asp-for="Alias" class="form-control" />
                    <span asp-validation-for="Alias" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryProductId" class="control-label">Chọn mục</label>
                    <select asp-for="CategoryProductId" class="form-control"
                            asp-items="@(new SelectList(ViewBag.catList, "Value","Text"))">
                    </select>
                    <span asp-validation-for="CategoryProductId" class="alert-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DiscountsId" class="control-label">Giảm giá</label>
                    <select asp-for="DiscountsId" class="form-control"
                            asp-items="@(new SelectList( ViewBag.discoutList, "Value","Text"))">
                    </select>
                    <span asp-validation-for="DiscountsId" class="alert-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Mô tả</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label">Giá</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group col-md-12">
                    <label class="control-label">Ảnh</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <button class="btn btn-success" type="button" onclick="openDialog()">Chọn ảnh</button>
                        </div>
                        <input type="text" class="form-control" asp-for="Image" id="file_input">
                    </div>
                </div>
                <div class="form-group col-md-12">
                    <label asp-for="Detail" class="control-label">Chi tiết</label>
                    <textarea asp-for="Detail" class="form-control"></textarea>
                </div>

                <div class="form-group d-none">
                    <input asp-for="CreatedBy" class="form-control" />
                </div>
                <div class="form-group d-none">
                    <input asp-for="CreatedDate" class="form-control" />
                </div>
                <div class="form-group d-none">
                    <input asp-for="ModifiedBy" class="form-control" value="@Functions._UserName" />
                </div>
                <div class="form-group d-none">
                    <input asp-for="ModifiedDate" class="form-control" value="@Functions.getCurrentDate()" />
                </div>

                <div class="form-group">
                    <label>
                        @Html.CheckBox("IsActive",Model.IsActive)
                        Ẩn/Hiện
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Lưu" class="btn btn-success" />
                </div>
            </form>
            <div>
                <a asp-action="Index" style="color: #198754; text-decoration: none;"> <i class="fa-solid fa-arrow-left"></i> Quay lại</a>
            </div>
        </div>
    </div>
</div>
@{
    var summerNote = new doan.Areas.Admin.Models.SummerNote("#Detail");
    <partial name="_SummerNote" model="summerNote" />
}