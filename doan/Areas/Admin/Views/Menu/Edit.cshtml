@model doan.Models.Menu
@using doan.Utilities;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Default form</h4>
                        <p class="card-description">
                            Basic form layout
                        </p>
                        <form class="forms-sample" asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group d-none">
                                <input asp-for="MenuId" />
                            </div>

                            <div class="form-group">
                                <label asp-for="MenuName" class="control-label"></label>
                                <input asp-for="MenuName" class="form-control" />
                                <span asp-validation-for="MenuName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Alias" class="control-label"></label>
                                <input asp-for="Alias" class="form-control" />
                                <span asp-validation-for="Alias" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Levels" class="control-label"></label>
                                <input asp-for="Levels" class="form-control" />
                                <span asp-validation-for="Levels" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ParentId" class="control-label"></label>
                                <input asp-for="ParentId" class="form-control" />
                                <span asp-validation-for="ParentId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Position" class="control-label"></label>
                                <input asp-for="Position" class="form-control" />
                                <span asp-validation-for="Position" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Link" class="control-label"></label>
                                <input asp-for="Link" class="form-control" />
                                <span asp-validation-for="Link" class="text-danger"></span>
                            </div>

                            <div class="form-group d-none">
                                <input asp-for="CreatedDate" class="form-control" />
                            </div>
                            <div class="form-group d-none">
                                <input asp-for="CreatedBy" class="form-control" />
                            </div>
                            <div class="form-group d-none">
                                <input asp-for="ModifiedDate" class="form-control" value="@Functions.getCurrentDate()" />
                            </div>
                            <div class="form-group d-none">
                                <input asp-for="ModifiedBy" class="form-control" value="name admin modified" />
                            </div>

                            <div class="form-group">
                                <label>
                                    @Html.CheckBox("IsActive",Model.IsActive)
                                    IsActive
                                </label>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>



