@using doan.Models;
@* @model IList<Menu> *@
@model IEnumerable<doan.Models.Menu>


<div class="app-wrapper">
    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">
            <p>
                <a type="buton" class="btn btn-success" asp-area="Admin" asp-controller="Menu" asp-action="Create">
                    <i class="bi bi-file-earmark-text me-1"></i>
                    Thêm menu
                </a>
            </p>
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.MenuName)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Levels)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.ParentId)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Position)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.CreatedBy)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th scope="col">

                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 0;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(++i)</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MenuName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Levels)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ParentId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Position)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedBy)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.MenuId" class="btn mr-1 mb-1 btn-success">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.MenuId" class="btn mr-1 mb-1 btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

