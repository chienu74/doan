@using doan.Models;
@* @model IList<Menu> *@
@model IEnumerable<doan.Models.Menu>

<h1>Index</h1>

<div class="app-content content">
    <div class="content-wrapper">
        <p>
            <a type="buton" class="btn btn-success" asp-area="Admin" asp-controller="Menu" asp-action="Create">
                <i class="bi bi-file-earmark-text me-1"></i>
                Thêm menu
            </a>
        </p>
        <div class="content-body">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.MenuName)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Levels)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.ParentId)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Position)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.CreatedBy)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th scope="col">

                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.MenuName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Levels)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ParentId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Position)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedBy)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.MenuId"   class="btn mr-1 mb-1 btn-success">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.MenuId" class="btn mr-1 mb-1 btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



