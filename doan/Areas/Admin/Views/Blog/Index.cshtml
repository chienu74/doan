@using X.PagedList;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Mvc.Common;
@model IPagedList<doan.Models.Blog>
@{
    ViewData["Title"] = "Index";
	ViewData["Action"] = "Blog";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="app-wrapper">
    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">
            <p>
                <a type="buton" class="btn btn-success" asp-area="Admin" asp-controller="Blog" asp-action="Create">
                    <i class="bi bi-file-earmark-text me-1"></i>
                    Thêm bài viết
                </a>
                <a type="buton" class="btn btn-success" asp-area="Admin" asp-controller="Category" asp-action="Index">
                    <i class="bi bi-file-earmark-text me-1"></i>
                    Loại bài viết
                </a>
            </p>
            <div class="content-body">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Ảnh</th>
                            <th scope="col">Tiêu đề</th>
                            <th scope="col">Ẩn hiện</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 0;
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(++i)</td>
                                <td>
                                    <img style="height:125px;" src="@item.Image">
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.BlogId" class="btn mr-1 mb-1 btn-success">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.BlogId" class="btn mr-1 mb-1 btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index",new{page=page}),
                new X.PagedList.Mvc.Common.PagedListRenderOptions
                {
                
                PageClasses = new[] {"page-link"},
                LiElementClasses = new[] {"page-item"},
                UlElementClasses = new[] { "pagination", "flex-row"},
                })
            </div>
        </div>
        <br />
    </div>
</div>


<script>
    $(document).ready(function () {
        $('ul.pagination > li.disabled > a').addClass('page-link');
    });
</script>