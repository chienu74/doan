<div class="app-utility-item app-user-dropdown dropdown">
    <a class="dropdown-toggle" id="user-dropdown-toggle" data-bs-toggle="dropdown"
       href="#" role="button" aria-expanded="false" style="text-decoration:none;">
        <img src=" @ViewBag.acccca.Avatar" alt="user profile" style="border-radius:50%; width:45px;height:45px;object-fit:cover;">
        @ViewBag.acccca.Username
    </a>
    <ul class="dropdown-menu" aria-labelledby="user-dropdown-toggle">
        <li>
            <a id="fixa" class="dropdown-header" href="">
                @if (ViewBag.acccca.FullName == "")
                {
                    <h6> @ViewBag.acccca.UserName</h6>
                }
                else
                {
                    <h6> @ViewBag.acccca.FullName</h6>
                }
                <span id="hoverspan"> @ViewBag.acccca.Email</span>
            </a>
        </li>
        <li><a class="dropdown-item" href="/Admin/Account">Tài khoản</a></li>
        <li><hr class="dropdown-divider"></li>
        <li><a class="dropdown-item" href="/Admin/Home/Logout">Đăng xuất</a></li>
    </ul>
</div><!--//app-user-dropdown-->